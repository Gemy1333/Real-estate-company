CREATE TABLE HR.CONTRACTS
(
  CONTRACT_ID               NUMBER(5),
  CONTRACT_STARTDATE        DATE,
  CONTRACT_ENDDATE          DATE,
  PAYMENTS_INSTALLMENTS_NO  NUMBER(5),
  CONTRACT_TOTAL_FEES       NUMBER(10,2),
  CONTRACT_DEPOSIT_FEES     NUMBER(10,2),
  CLIENT_ID                 NUMBER(3),
  CONTRACT_PAYMENT_TYPE     VARCHAR2(20 BYTE),
  NOTES                     VARCHAR2(4000 BYTE)
);

ALTER TABLE HR.CONTRACTS ADD (
  CONSTRAINT CONTRACTS_PK
 PRIMARY KEY
 (CONTRACT_ID);
